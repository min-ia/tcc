\newcommand{\source}[1]{\cite{#1}}

\let\oldquotation\quotation
\let\endoldquotation\endquotation
 \renewenvironment{quotation}[2]{%
  \if\relax\detokenize{#1}\relax
    \def\quotationauthor{}%
  \else
    \if\relax\detokenize{#2}\relax
      \def\quotationauthor{\cite{#1}}%
    \else
      \def\quotationauthor{\cite[tradução nossa]{#1}}%
    \fi
  \fi
  \small\list{}{\rightmargin=0cm \leftmargin=4cm}%
  \item\relax
}{%
  \quotationauthor%
  \endlist
}

\let\oldquote\quote
\let\endoldquote\endquote
 \renewenvironment{quote}[1][]{%
   \if\relax\detokenize{#1}\relax
    \def\quoteauthor{}%
  \else
    \def\quoteauthor{\cite{#1}}%
  \fi
  ``%
}{%
  '' \quoteauthor%
}

